<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment"
    android:background="@color/darkBlue">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            android:paddingVertical="20dp">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Booked Tickets"
                    android:textColor="@color/yellow"
                    style="@style/title_14"
                    android:textSize="24sp"/>
            </LinearLayout>
        </LinearLayout>

        <!--    line break-->
        <View
            android:id="@+id/line_yellow"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/yellow"
            android:layout_marginVertical="3dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="24dp"
            android:gravity="center_vertical">
            <!--    search bar-->

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/detail_film"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp"
                android:layout_marginBottom="30dp"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/img_elemen"
                    android:layout_width="66dp"
                    android:layout_height="80dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:src="@drawable/elemental2"/>
                <TextView
                    android:id="@+id/elemen_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Elemental"
                    style="@style/title_20"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/img_elemen"
                    android:layout_marginLeft="24dp"/>
                <TextView
                    android:id="@+id/text_des"
                    app:layout_constraintTop_toBottomOf="@id/elemen_title"
                    app:layout_constraintLeft_toLeftOf="@id/elemen_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PLAZA AMBARUKMO XXI Lantai 3 . Jl. Laksda Adisucipto KM 6. Yogyakarta"
                    style="@style/text"
                    android:textColor="@color/grey"
                    android:textSize="14sp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_below="@id/detail_film"
                android:id="@+id/detail_film1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp"
                android:layout_marginBottom="30dp"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/img_elemen1"
                    android:layout_width="66dp"
                    android:layout_height="80dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:src="@drawable/incep"/>
                <TextView
                    android:id="@+id/elemen_title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inception"
                    style="@style/title_20"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/img_elemen1"
                    android:layout_marginLeft="24dp"/>
                <TextView
                    android:id="@+id/text_des1"
                    app:layout_constraintTop_toBottomOf="@id/elemen_title1"
                    app:layout_constraintLeft_toLeftOf="@id/elemen_title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mall Sleman City Hall Lt. 2. Jln. Gito Gati, Denggung, Tridadi, Kab Sleman"
                    style="@style/text"
                    android:textColor="@color/grey"
                    android:textSize="14sp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>


        </RelativeLayout>
    </LinearLayout>
</FrameLayout>