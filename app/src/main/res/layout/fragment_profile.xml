<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment"
    android:background="@color/darkBlue">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            android:paddingVertical="20dp">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textColor="@color/yellow"
                    style="@style/title_14"
                    android:textSize="24sp"/>
            </LinearLayout>
        </LinearLayout>

        <!--    line break-->
        <View
            android:id="@+id/line_yellow"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/yellow"
            android:layout_marginVertical="3dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="24dp"
            android:gravity="center_vertical">
            <!--    search bar-->
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Name"
                style="@style/title_14"
                android:textColor="@color/yellow"
                android:layout_marginTop="48dp"
                android:layout_marginVertical="4dp"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="32dp"
                android:text="Eliana Amelia"
                style="@style/title_14"
                android:layout_marginVertical="4dp"/>

        </LinearLayout>
        <View
            android:id="@+id/line_yellow4"
            android:layout_below="@+id/name_director"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightGry"
            android:layout_marginVertical="3dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="24dp"
            android:gravity="center_vertical">
            <!--    search bar-->
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Password"
                style="@style/title_14"
                android:textColor="@color/yellow"
                android:layout_marginTop="48dp"
                android:layout_marginVertical="4dp"/>
            <TextView
                android:id="@+id/name_director"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="32dp"
                android:text="*******"
                style="@style/title_14"
                android:layout_marginVertical="4dp"/>

        </LinearLayout>
        <View
            android:id="@+id/line_yellow5"
            android:layout_below="@+id/name_director"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightGry"
            android:layout_marginVertical="3dp"/>
    </LinearLayout>
</FrameLayout>